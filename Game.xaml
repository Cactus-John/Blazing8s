<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Blazing8s.Game"
             Title="Game">

    <VerticalStackLayout Margin="20" Spacing="3">

        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <ImageButton Source="redcard1.png"
                  x:Name="RedCard1"
                  HeightRequest="100"
                  WidthRequest="200"
                  Clicked="OnImageButton1_Clicked"  />
            
        <ImageButton Source="redcard2.png"
                  x:Name="RedCard2"
                  HeightRequest="100"
                  WidthRequest="200"
                  Clicked="OnImageButton2_Clicked"  />

        <ImageButton Source="redcard3.png"
                  x:Name="RedCard3"
                  HeightRequest="100"
                  WidthRequest="200"
                  Clicked="OnImageButton3_Clicked"  />

    </VerticalStackLayout>

</ContentPage>