<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Blazing8s.Game"
             Title="Game">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="120" />
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="1" Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="FillAndExpand">
            <ImageButton Source="redcard1.png" x:Name="RedCard1" Clicked="OnImageButton1_Clicked"/>
            <ImageButton Source="redcard2.png" x:Name="RedCard2" Clicked="OnImageButton2_Clicked"/>
            <ImageButton Source="redcard3.png" x:Name="RedCard3" Clicked="OnImageButton3_Clicked"/>
            <ImageButton Source="greencard1.png" x:Name="GreenCard1" Clicked="OnImageButton4_Clicked"/>
            <ImageButton Source="greencard2.png" x:Name="GreenCard2" Clicked="OnImageButton5_Clicked"/>
            <ImageButton Source="bluecard1.png" x:Name="BlueCard1" Clicked="OnImageButton6_Clicked"/>
        </StackLayout>
    </Grid>
</ContentPage>